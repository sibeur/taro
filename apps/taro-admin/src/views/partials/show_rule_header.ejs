<div class="container">
    <div class="columns">
        <div class="column col-6">
            <h1>Rule <%= rule.name %></h1>
        </div>
        <div class="column col-5">
            <p style="margin: 0;"><strong>Size Ratio:</strong></p>
            <div class="bar">
                <div class="bar-item tooltip tooltip-bottom" data-tooltip="Commited Media" style="width:50%;">5GB</div>
                <div class="bar-item tooltip tooltip-bottom" data-tooltip="Uncommited Media" style="width:50%;background:#818bd5;">5GB</div>
            </div>
        </div>
        <div class="column col-1">
            <div class="float-right">
                <button class="btn tooltip tooltip-bottom" data-tooltip="Edit Rule"><i class="icon icon-edit"></i></button>
                <button class="btn tooltip tooltip-bottom" data-tooltip="Delete Rule"><i class="icon icon-delete"></i></button>
            </div>
        </div>
    </div>
</div>